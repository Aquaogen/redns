<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/apk_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bg_screen2"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:background="@color/bg_screen2"
        android:layout_height="110dp"
        android:layout_margin="5dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:background="@color/bg_screen2"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/status_indicator"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/colorGreen_A400"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <ImageView
                    android:id="@+id/apk_icon_iv"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="12dp"
                    android:maxWidth="60dp"
                    android:maxHeight="60dp"
                    tools:src="@color/colorPrimary" />

                <TextView
                    android:id="@+id/apk_label_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/apk_icon_iv"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/apk_icon_iv"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-light"
                    android:maxLines="1"
                    android:text="Dummy Label"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/apk_package_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/apk_label_tv"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/apk_icon_iv"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-thin"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/toggle_wifi"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:drawableBottom="@android:drawable/button_onoff_indicator_on"
                    android:layout_marginRight="5dp"
                    android:text="Data" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/toggle_mobile_data"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:drawableBottom="@android:drawable/button_onoff_indicator_on"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:layout_toLeftOf="@id/toggle_wifi"
                    android:textAlignment="center"
                    android:text="WiFi" />

            </RelativeLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="0.99"
            android:background="@color/black"
            android:layout_margin="2dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:layout_margin="1dp"
                android:background="@color/bg_screen2"
                android:gravity="center"

                android:textColor="@color/black"
                android:text="Background"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="0.33"
                android:textColor="@color/black"
                android:background="@color/bg_screen2"
                android:text="Screen Off"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.33"
                android:textColor="@color/black"
                android:layout_margin="1dp"
                android:background="@color/bg_screen2"
                android:text="Always"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</RelativeLayout>