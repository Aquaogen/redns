<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/accent_bad</item>
        <item name="colorSwitchThumbNormal">@color/neutral</item>
        <item name="android:buttonStyleToggle">@android:style/Widget.Material.Button.Toggle</item>
        <item name="chipStyle">@style/Widget.MaterialComponents.Chip.Action</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="searchViewStyle">@style/SearchView_custom</item>
    </style>

    <style name="ActionItem">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryText</item>

    </style>

    <style name="CustomWidget.MaterialComponents.CompoundButton.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/CustomCompoundButton_Switch</item>
    </style>

    <style name="CustomCompoundButton_Switch">
        <item name="colorSurface">@color/neutral</item>
        <item name="colorOnSurface">@color/neutral</item>
        <item name="colorControlActivated">@color/accent_good</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog_fragment</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/accent_bad</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/neutral</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">@color/primaryText</item>
        <item name="android:textColor">@color/neutral</item>
    </style>

    <style name="SearchView_custom" parent="Widget.AppCompat.SearchView">
        <item name="searchViewStyle">@style/Widget.AppCompat.Light.SearchView</item>
        <item name="android:maxWidth">@dimen/maxSize</item>
    </style>

    <style name="SwitchCompat_theme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/accent_bad</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/neutral</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">@color/neutral</item>
    </style>

    <style name="ThinnerChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipCornerRadius">12dp</item>
        <item name="chipMinHeight">24dp</item>
        <item name="android:textSize">12sp</item>
        <item name="chipMinTouchTargetSize">30dp</item>
    </style>

    <style name="ThinnerChip_action" parent="Widget.MaterialComponents.Chip.Action">
            <item name="chipCornerRadius">12dp</item>
            <item name="chipMinHeight">24dp</item>
            <item name="android:textSize">12sp</item>
            <item name="chipMinTouchTargetSize">30dp</item>
        </style>


    <!--    <style name="BraveModeSpinnerTheme" parent="Widget.AppCompat.DropDownItem.Spinner">
            <item name="android:spinnerDropDownItemStyle">@style/Widget.AppCompat.TextView.SpinnerItem</item>
            <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        </style>-->

</resources>
